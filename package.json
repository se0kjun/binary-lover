{
	"name": "binary-lover",
	"displayName": "binary-lover",
	"description": "For everyone who loves binary",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": [
			{
				"title": "binary-lover",
				"properties": {
					"conf.resource.numberOfBinaryInLine": {
						"type": "number",
						"default": 16,
						"description": "Specify how many binary shows in a line",
						"scope": "resource"
					},
					"conf.resource.lazyLoadingSize": {
						"type": "number",
						"default": 1000,
						"description": "Specify a number of line for lazy loading in a time",
						"scope": "resource"
					}
				}
			}
		],
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
